{
  "manifest_version": 2,
  "name": "Hacker News Tab",
  "short_name": "Hacker News Tab",
  "description": "Replace the new tab with a list of trending stories on Hacker News",
  "version": "1.0",
  "permissions": [
    "tabs",
    "storage",
    "webNavigation",
    "*://*.ycombinator.com/*"
  ],
  "icons": {
    "16": "assets/img/icon128.png",
    "48": "assets/img/icon128.png",
    "128": "assets/img/icon128.png"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "homepage_url": "http://sharonlin.me/",
  "browser_action": {
    "default_title": "Hacker News",
    "default_icon": "assets/img/icon128.png"
  }
}
